<%= simple_form_for(@job, :html => {:novalidate => true ,:multipart => true}) do |f| %>
  <%= f.error_notification %>
  
  <%=f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-inputs">
    <%= f.input :avatar, as: :file %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :valid_from, as: :datepicker, required: false,
    :placeholder => 'Select date', input_html: {class: "form-control"},
    label: "Valid From: " %>
    <%= f.input :valid_to, as: :datepicker, required: false,
    :placeholder => 'Select date', input_html: {class: "form-control"},
    label: "Valid Untill: " %>
    <%= f.input :salary %>
    <%= f.input :type_of_contract %>
    <%= f.input :profession_id, :collection => professions, :label_method => :area_name , :value_method => :id, :label => "Profession", :include_blank => true %>
    <%= f.input :active %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit  ,class: "btn btn-primary" %>
  </div>
<% end %>