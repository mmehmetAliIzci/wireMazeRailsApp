<p id="notice"><%= notice %></p>

<p>
  <h2 class = "text-left"><%= @notice.title %></h2>
</p>
<p>
<%= link_to image_tag(@notice.avatar.url(:large), style: "float: right;"), notice  %>
</p>
<p>
  <%= @notice.date.to_date %>
</p>

<p>
  <strong>Text:</strong>
  <%= @notice.text.html_safe %>
</p>
<br>
<% if logged_in? && isAdmin?(current_user) %>
	<%= link_to 'Show All News', backoffice_notices_all_path %> 
<% else%>
	<%= link_to 'Show All News', notices_path %> 
<% end%>
<% %>


