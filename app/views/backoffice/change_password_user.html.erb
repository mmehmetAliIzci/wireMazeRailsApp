
<h1>Change Password</h1>

<p>
<strong>Name</strong> 
<%= @user.name%>
</p>
<br>
<%= simple_form_for @user, :url => backoffice_user_update_password_path do |f| %>
  
  <%= hidden_field_tag :format, @user.id  %>
  <div class="form-inputs">
    <%= f.input :password %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit  ,class: "btn btn-primary" %>
  </div>
<% end %>