<h1>Detail of Notice</h1>


<div class="col-md-6">
	<p>
	<strong>Title</strong>	
	<br>
	<%= @notice.title%>
	</p>

</div>
<div class="col-md-6">
	<p>
	<strong>Date</strong>	
	<br>
	<%= @notice.date.to_date%>
	</p>
</div>

<div class="col-md-12">
<p>
<strong>Summary</strong>	
<br>
<%= @notice.summary.html_safe%>
</p>
</div>


<div class="col-md-12">
<p>
<strong>Text</strong>	
<br>
<%= @notice.text.html_safe%>
</p>

</div>

<div class="col-md-12">
<p>
<strong>Image</strong>	
<br>
<%= link_to image_tag(@notice.avatar.url(:thumb)), @notice  %>
</p>
</div>



<div class="col-md-6">
	<p>
	<strong>Featured ?</strong>	
	<br>
	<%= @notice.prior%>
	</p>
</div>

<div class="col-md-6">
	<p>
	<strong>Active ?</strong>	
	<br>
	<%= @notice.active%>
	</p>
</div>


<%= link_to 'Edit', edit_notice_path(@notice) %> |
<%= link_to 'Destroy', @notice, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Insert new Notice', new_notice_path %> |
<%= link_to 'List of Notices', backoffice_notices_all_path %>