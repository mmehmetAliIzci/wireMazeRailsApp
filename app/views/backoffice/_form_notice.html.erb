<%= simple_form_for @notice, :url => backoffice_user_update_path do |f| %>

	<%= hidden_field_tag :format, @user.id  %>
  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :name %>
    <%= f.input :active  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit  ,class: "btn btn-primary" %>
  </div>
<% end %>