<div class= "col-md-6">
  <div class= "portlet light bordered">
    <div class="portlet-title">
      <div class="caption font-dark">
        <span class="caption-subject bold uppercase">Jobs That I Applied</span>
      </div>
    </div>

    <div class="portlet-body">
      <div class="CSSAnimationChart">
        <% if @jobs_interested.present? %>
        <ul class="s-job-list">
          <% @jobs_interested.each do |job| %>
            <%= render 'shared/job_item', job: job %>
          <% end %>
        </ul>
        <%= will_paginate @jobs_interested, :param_name => 'jobs_page' %>
        <% else %>
        <p>There are no job offers that you applied</p>
        <% end %>
      </div>
    </div>
  </div>
</div>


