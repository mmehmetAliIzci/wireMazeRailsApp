<li>
	<%= link_to image_tag(gravatar_url(user)), user %>
	<%= user.email %>
	<%= link_to user.name, user %>
	<%= user.type_of_users %>
	<%= user.active %>
	<%= link_to 'Show', user %>
  <%if current_user.present?%>
  	<% if current_user.type_of_users == 3 && !current_user?(user) %>
    	| <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  	<% end %>
  	<% if current_user?(user) %>
    	| <%= link_to 'Edit', edit_user_path(user) %>
  	<% end %>
  <%end %>
</li>