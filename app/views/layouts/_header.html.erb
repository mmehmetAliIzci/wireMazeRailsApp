<header >
  <div class="knet-header">

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if logged_in? && current_user.type_of_users == 3%>
            <%= link_to "Job Portal", backoffice_home_path, id: "logo" %>
          <%else %>
            <%= link_to "Job Portal", root_path, id: "logo" %>
          <% end %>
          
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-left">
            <% if logged_in? && current_user.type_of_users == 3%>
              <li><%= link_to "Home",   backoffice_home_path %></li>
              <li><%= link_to "Users", backoffice_users_all_path %></li>
              <li><%= link_to "Notices", backoffice_notices_all_path %></li>
            <%else %>
              <li><%= link_to "Home",   root_path %></li>
              <li><%= link_to "Companies",  companies_path%></li>
              <li><%= link_to "Canditates", canditates_path %></li>
              <li><%= link_to "Jobs", jobs_path %></li>
              <li><%= link_to "News", notices_path %></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to current_user.name, current_user %></li>
              <li><%= link_to "Log-out", logout_path, method: "delete" %></li>
            

            <% else %>
                <li><%= link_to "Register",   before_sign_up_path %></li>
                <li><%= link_to "Log in", login_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    
  </div>
</header>

